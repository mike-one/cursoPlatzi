<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="0dp"
    layout_height="ma"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivItemSpeakerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altoImageViewHome"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvItemSpeakerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Nombre Expositor"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/tamanioTitulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemSpeakerJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:text="Trabajo Expositor"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/tamanioSubtitulo" />


    </LinearLayout>

</androidx.cardview.widget.CardView>